<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ImageView hiển thị thumbnail (Ảnh hoặc Video) -->
        <ImageView
            android:id="@+id/img_media_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#CCCCCC"
            android:contentDescription="Media Thumbnail" />

        <!-- Icon Play cho Video (mặc định ẩn) -->
        <ImageView
            android:id="@+id/img_video_play_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_video_camera"
            android:visibility="gone"
            app:tint="@android:color/white" />

        <!-- Nút xóa tệp -->
        <ImageView
            android:id="@+id/btn_delete_media"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|end"
            android:layout_margin="4dp"
            android:padding="2dp"
            android:background="@drawable/circle_background"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@android:color/white" />

    </FrameLayout>
</androidx.cardview.widget.CardView>