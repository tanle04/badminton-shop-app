<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ui.VoucherSelectionActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Chọn Mã Giảm Giá"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/redeem_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:padding="8dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:hint="Nhập mã giảm giá"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_redeem_code"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_voucher_code_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapCharacters"
                android:maxLength="10"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_redeem_code"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Áp dụng"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/input_layout_code"
            app:layout_constraintBottom_toBottomOf="@id/input_layout_code"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_vouchers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/redeem_section"
        android:layout_above="@+id/bottom_bar_voucher"
        android:paddingTop="8dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_voucher" />

    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_bar_voucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cancel_voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Không dùng Voucher"
                android:padding="16dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_apply_voucher"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Đồng ý"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="0dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>