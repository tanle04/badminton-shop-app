<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/bg_item_card"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/badminton_racket"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_image_round"
        android:padding="4dp"
        android:layout_marginEnd="12dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vợt Cầu Lông Yonex Astrox 100ZZ"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/itemCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dụng cụ cầu lông"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.500.000đ"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/itemDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giảm 10%"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="13sp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/itemFavorite"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_favorite_border"
        android:tint="@android:color/darker_gray"
        android:layout_marginStart="8dp"/>
</LinearLayout>
