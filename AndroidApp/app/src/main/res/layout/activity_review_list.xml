<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.ReviewListActivity">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/back_button"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/tvProductNameHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Đánh giá Vợt Yonex Astrox 100ZZ" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="#FFF9C4"> <TextView
                android:id="@+id/tvAverageRatingLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="48sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="4.9" />

                <TextView
                    android:id="@+id/tvRatingLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá Sản phẩm"
                    android:textColor="#888"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="@id/tvAverageRatingLarge"
                    app:layout_constraintTop_toBottomOf="@id/tvAverageRatingLarge" />

                <RatingBar
                    android:id="@+id/ratingBarReviewList"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4.9"
                    android:stepSize="0.1"
                    android:theme="@style/RatingBarYellow"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@id/tvAverageRatingLarge"
                    app:layout_constraintStart_toEndOf="@id/tvAverageRatingLarge" />

                <TextView
                    android:id="@+id/tvTotalReviewsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="#555"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@id/tvAverageRatingLarge"
                    app:layout_constraintTop_toBottomOf="@id/ratingBarReviewList"
                    tools:text="(1200 đánh giá)" />

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tvRatingLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupFilters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_all"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tất cả"
                            android:checkable="true"
                            android:checked="true"
                            android:textColor="@color/chip_text_color"
                            app:chipBackgroundColor="@color/chip_background_color"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_with_media"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                        android:text="Có hình ảnh/video"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background_color"
                        />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_5_star"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 Sao"
                            android:textColor="@color/chip_text_color"
                            app:chipBackgroundColor="@color/chip_background_color"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_4_star"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4 Sao"
                            android:textColor="@color/chip_text_color"
                            app:chipBackgroundColor="@color/chip_background_color"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_3_star"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 Sao"
                            android:textColor="@color/chip_text_color"
                            app:chipBackgroundColor="@color/chip_background_color"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_2_star"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 Sao"
                            android:textColor="@color/chip_text_color"
                            app:chipBackgroundColor="@color/chip_background_color"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_1_star"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 Sao"
                            android:textColor="@color/chip_text_color"
                            app:chipBackgroundColor="@color/chip_background_color"/>

                    </com.google.android.material.chip.ChipGroup>
                </HorizontalScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View android:layout_width="match_parent" android:layout_height="8dp" android:background="#F0F0F0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingTop="12dp"
                android:text="Tất cả đánh giá"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingVertical="8dp"
                tools:itemCount="5"
                tools:listitem="@layout/item_review" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>