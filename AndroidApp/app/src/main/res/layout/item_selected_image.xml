<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp">

    <ImageView
        android:id="@+id/img_selected"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:background="@drawable/placeholder_image" /> <ImageButton
    android:id="@+id/btn_remove_image"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_gravity="top|end"
    android:padding="4dp"
    android:scaleType="fitCenter"
    android:background="@drawable/circle_background_red" android:src="@android:drawable/ic_menu_close_clear_cancel" android:contentDescription="Xóa ảnh"
    app:tint="@android:color/white" />

</FrameLayout>